package especial;

import robocode.*;
import java.awt.*; 

public class VingadorBot extends AdvancedRobot {

    public void run() {
        setBodyColor(Color.DARK_GRAY);
        setGunColor(Color.ORANGE);
        setRadarColor(Color.RED);


        setAdjustRadarForGunTurn(true);
        setAdjustGunForRobotTurn(true);


        while (true) {
            setTurnRadarRight(360);
            execute();
        }
    }

    public void onScannedRobot(ScannedRobotEvent e) {
        double radarTurn = getHeading() + e.getBearing() - getRadarHeading();
        setTurnRadarRight(normalizeBearing(radarTurn) * 2);


        double gunTurn = getHeading() + e.getBearing() - getGunHeading();
        setTurnGunRight(normalizeBearing(gunTurn));


        if (getGunHeat() == 0 && Math.abs(getGunTurnRemaining()) < 5) {
            setFire(2);
        }
    }

    public void onHitByBullet(HitByBulletEvent e) {
        out.println("Retaliação ativada!");
        setTurnRight(90 - e.getBearing()); 
        setAhead(100); 

        if (getGunHeat() == 0) {
            setFire(2); 
        }
    }

    public void onHitWall(HitWallEvent e) {
        back(50);
        setTurnRight(90);
    }

    public void onHitRobot(HitRobotEvent e) {
        for (int i = -15; i <= 15; i += 15) {
            setTurnGunRight(i);
            setFire(1);
        }
    }

    private double normalizeBearing(double angle) {
        while (angle > 180) angle -= 360;
        while (angle < -180) angle += 360;
        return angle;
    }
}
